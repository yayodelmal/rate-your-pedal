                                        <option value="MXR">MXR</option>
                                        <option value="Ibanez">Ibanez</option>
                                        <option value="Mooer">Mooer</option>
                                        <option value="Xotic">Xotic</option>
                                        <option value="Catalinbread">Catalinbread</option>
                                        <option value="Other">Other</option>
                                   </select>
                              </div>
                              <div class="form-group">
                                   <label for="exampleFormControlInput1" id="titleb">Type</label>
                                   <input type="text" name="rp_tipo" class="form-control" placeholder="Pedal Type"
                                        required="">
                              </div>
                              <div class="form-group">
                                   <label for="exampleFormControlInput1" id="titleb">Model</label>
                                   <input type="text" name="rp_modelo" class="form-control" placeholder="Pedal Model"
                                        required="">
                              </div>
                              <div class="form-group">
                                   <label for="exampleFormControlSelect1" id="titleb">Pedal Status</label>
                                   <select class="form-control" id="exampleFormControlSelect1" name="rp_estado"
                                        required>
                                        <option value="">Status</option>
                                        <option value="new">New</option>
                                        <option value="used">Used</option>
                                        <option value="repaired">Repaired</option>
                                   </select>
                              </div>
                              <div class="form-group">
                                   <label for="exampleFormControlInput1" id="titleb">Price in $USD</label>
                                   <input type="number" min="1" max="10000.00" step="0.01" name="rp_precio"
                                        class="form-control" placeholder="9.99" required="">
                              </div>
                              <label for="exampleFormControlInput1 " id="titleb">Description</label>
                              <textarea type="text" name="rp_descripcion" rows="2" class="form-control"
                                   placeholder="Your description" required=""></textarea>
                    </div>
                    <form>
                         <div class="form-group">
                              <label for="exampleFormControlFile1" id="titleb">Upload Image</label>
                              <input type="file" class="form-control-file" name="rp_img1" id="exampleFormControlFile1"
                                   placeholder="exam">
                         </div>
                         <div class="form-group">
                              <label for="exampleFormControlFile1" id="titleb">Upload Track Sample</label>
                              <input type="file" class="form-control-file" name="rp_demo" id="exampleFormControlFile1">
                         </div>

                         <div class="form-group">
                              <div class="row justify-content-center">
                                   <button class="btn btn-success btn-block" id="btnAdd">
                                        Publish
                              </div>
                              </button>
                         </div>
                    </form>
                    </form>
               </div>
          </div>
     </div>
</div>
