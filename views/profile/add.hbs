                                        required="" autofocus>
                              </div>
                              <div class="form-group">
                                   <label for="exampleFormControlSelect1" id="titleb">Pedal brand</label>
                                   <select class="form-control" name="rp_marca" id="exampleFormControlSelect1" required>
